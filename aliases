function git-rid {
    git branch -D $1
    git push origin :$1
}
function upd {
    if [[ $1 == 'all' ]]; then
        git submodule foreach git fetch --all
    else
        cd $1
        git fetch --all
        popd
    fi
    
}

function coi-tags {
    ctags `find ion/ -name \*.py`
    ctags -a `find extern/coverage-model/ -name \*.py`
    ctags -a `find extern/pyon -name \*.py`
}

function workonz {
    workon $1
    source ~/.oh-my-zsh/oh-my-zsh.sh
}

function meow {
    $*
    stat=$?
    growl $1 'Status: ' $stat
}

function start_supervisor {
    meow supervisord -c ~/.supervisor/supervisord.conf
}

function git-clean-branches {
    for d in $(git branch --merged master | grep -v "\* master"); do git push luke :$d; git branch -D $d; done
}

alias mw='meow'
if [[ "$USE_RVM" == "true" ]]
then
    rvm use ruby-2.0.0-p481
fi

enc () {
    gpg -aer 'luke@axds.co' -o $1.asc $1 && rm $1
}

function start-conda {
    eval "$(/home/luke/miniconda3/bin/conda shell.zsh hook)"
}
function pav {
    source $HOME/venv/bin/activate
}
