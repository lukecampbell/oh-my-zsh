function git-rid {
    git branch -D $1
    git push origin :$1
}
function upd {
    if [[ $1 == 'all' ]]; then
        git submodule foreach git fetch --all
    else
        cd $1
        git fetch --all
        popd
    fi
    
}

function coi-tags {
    ctags `find ion/ -name \*.py`
    ctags -a `find extern/coverage-model/ -name \*.py`
    ctags -a `find extern/pyon -name \*.py`
}

function workonz {
    workon $1
    source ~/.oh-my-zsh/oh-my-zsh.sh
}

function meow {
    $*
    stat=$?
    growl $1 'Status: ' $stat
}
